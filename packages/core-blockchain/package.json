{
  "name": "@phantomchain/core-blockchain",
  "description": "Blockchain Manager for PHANTOM Core",
  "version": "0.1.4",
  "contributors": [
    "François-Xavier Thoorens <fx@ark.io>",
    "Kristjan Košič <kristjan@ark.io>",
    "Brian Faust <brian@ark.io>"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "build:docs": "../../node_modules/.bin/jsdoc -c jsdoc.json",
    "test": "PHANTOM_ENV=test jest --forceExit",
    "test:coverage": "PHANTOM_ENV=test jest --coverage --forceExit",
    "test:debug": "PHANTOM_ENV=test node --inspect-brk ../../node_modules/.bin/jest --runInBand --watch",
    "test:watch": "PHANTOM_ENV=test jest --runInBand --watch",
    "test:watch:all": "PHANTOM_ENV=test jest --runInBand --watchAll",
    "flow:coverage": "flow-coverage-report --config ../../.flowcoverage.json",
    "flow:check": "flow check ./lib",
    "flow:deps": "flow-typed install",
    "lint": "eslint ./ --fix",
    "depcheck": "depcheck ./ --ignores=flow-bin"
  },
  "dependencies": {
    "@phantomchain/core-container": "^0.1.5",
    "@phantomchain/core-utils": "^0.1.4",
    "@phantomchain/crypto": "^0.2.8",
    "async": "^2.6.1",
    "awilix": "^4.0.0",
    "delay": "^4.1.0",
    "immutable": "^4.0.0-rc.12",
    "pretty-ms": "^4.0.0",
    "xstate": "^4.0.1"
  },
  "devDependencies": {
    "@phantomchain/core-p2p": "^0.1.4",
    "@phantomchain/core-test-utils": "^0.1.6",
    "axios": "^0.18.0",
    "axios-mock-adapter": "^1.15.0",
    "flow-bin": "^0.86.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10.x"
  }
}
