{
  "name": "@phantomchain/core-api",
  "description": "Public API for PHANTOM Core",
  "version": "0.1.3",
  "contributors": [
    "Kristjan Košič <kristjan@ark.io>",
    "Brian Faust <brian@ark.io>"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "build:docs": "../../node_modules/.bin/jsdoc -c jsdoc.json",
    "test": "PHANTOM_ENV=test jest --runInBand --forceExit",
    "test:coverage": "PHANTOM_ENV=test jest --coverage --runInBand --forceExit",
    "test:debug": "PHANTOM_ENV=test node --inspect-brk ../../node_modules/.bin/jest --runInBand --watch",
    "test:watch": "PHANTOM_ENV=test jest --runInBand --watch",
    "test:watch:all": "PHANTOM_ENV=test jest --runInBand --watchAll",
    "lint": "eslint ./ --fix",
    "depcheck": "depcheck ./ --ignores=flow-bin"
  },
  "dependencies": {
    "@phantomchain/core-container": "^0.1.5",
    "@phantomchain/core-http-utils": "^0.1.3",
    "@phantomchain/core-transaction-pool": "^0.1.5",
    "@phantomchain/core-utils": "^0.1.4",
    "@phantomchain/crypto": "^0.2.8",
    "ajv": "^6.5.5",
    "boom": "^7.2.2",
    "bs58check": "^2.1.2",
    "hapi-api-version": "^2.1.0",
    "hapi-pagination": "https://github.com/faustbrian/hapi-pagination",
    "hapi-rate-limit": "^2.1.3",
    "ip": "^1.1.5",
    "joi": "^14.0.4",
    "lodash": "^4.17.11",
    "moment": "^2.22.2"
  },
  "devDependencies": {
    "@phantomchain/core-test-utils": "^0.1.6",
    "axios": "^0.18.0",
    "flow-bin": "^0.86.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10.x"
  }
}
