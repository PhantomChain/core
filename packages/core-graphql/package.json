    "apollo-server-hapi": "^2.2.0",
    "graphql-tools-types": "^1.1.26",
    "moment": "^2.22.2"
  },
  "devDependencies": {
    "@phantomchain/core-test-utils": "^0.1.5",
    "flow-bin": "^0.86.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10.x"
  }
