{
  "name": "@phantomchain/core-deployer",
  "description": "Deployer for PHANTOM Core",
  "version": "0.1.2",
  "contributors": [
    "Brian Faust <brian@ark.io>",
    "Alex Barnsley <alex@ark.io>"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "bin": {
    "phantom:deployer": "./bin/deployer"
  },
  "scripts": {
    "start": "./bin/deployer",
    "test": "PHANTOM_ENV=test jest --forceExit",
    "test:coverage": "PHANTOM_ENV=test jest --coverage --forceExit",
    "test:debug": "PHANTOMNTOM_ENV=test node --inspect-brk ../../node_modules/.bin/jest --runInBand --watch",
    "test:watch": "PHANTOM_ENV=test jest --runInBand --watch",
    "test:watch:all": "PHANTOM_ENV=test jest --runInBand --watchAll",
    "flow:coverage": "flow-coverage-report --config ../../.flowcoverage.json",
    "flow:check": "flow check ./lib",
    "flow:deps": "flow-typed install",
    "lint": "eslint ./ --fix",
    "depcheck": "depcheck ./ --ignores=flow-bin,commander,pino-pretty"
  },
  "dependencies": {
    "@phantomchain/crypto": "^0.2.7",
    "bip39": "^2.5.0",
    "bytebuffer": "^5.0.1",
    "commander": "^2.19.0",
    "envfile": "^2.3.0",
    "expand-home-dir": "0.0.3",
    "fs-extra": "^7.0.1",
    "joi": "^14.0.4",
    "lodash": "^4.17.11",
    "pino": "^5.8.1",
    "pino-pretty": "^2.2.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10.x"
  },
  "devDependencies": {
    "flow-bin": "^0.86.0"
  }
}
