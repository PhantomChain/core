{
  "name": "@phantomchain/core-tester-cli",
  "description": "Tester CLI for PHANTOM Core",
  "version": "0.1.3",
  "contributors": [
    "Brian Faust <brian@ark.io>",
    "Alex Barnsley <alex@ark.io>"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "bin": {
    "phantom:tester": "./bin/tester"
  },
  "scripts": {
    "start": "./bin/tester",
    "test": "PHANTOM_ENV=test jest --forceExit",
    "test:coverage": "PHANTOM_ENV=test jest --coverage --forceExit",
    "test:debug": "PHANTOM_ENV=test node --inspect-brk ../../node_modules/.bin/jest --runInBand --watch",
    "test:watch": "PHANTOM_ENV=test jest --runInBand --watch",
    "test:watch:all": "PHANTOM_ENV=test jest --runInBand --watchAll",
    "flow:coverage": "flow-coverage-report --config ../../.flowcoverage.json",
    "flow:check": "flow check ./lib",
    "flow:deps": "flow-typed install",
    "lint": "eslint ./ --fix",
    "depcheck": "depcheck ./ --ignores=flow-bin,commander,pino-pretty"
  },
  "dependencies": {
    "@phantomchain/core-utils": "^0.1.4",
    "@phantomchain/crypto": "^0.2.8",
    "axios": "^0.18.0",
    "bip39": "^2.5.0",
    "clipboardy": "^1.2.3",
    "commander": "^2.19.0",
    "delay": "^4.1.0",
    "lodash": "^4.17.11",
    "pino": "^5.8.1",
    "pino-pretty": "^2.2.3",
    "superheroes": "^2.0.0"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.15.0",
    "flow-bin": "^0.86.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10.x"
  }
}
